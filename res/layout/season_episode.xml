<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="@dimen/offset_small">

	<tv.turbik.ui.AspectRatioImageView
		app:aspectRatio="0.56470588235294"
		android:id="@+id/frameImage"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:scaleType="centerCrop" />

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="@dimen/offset_small"
		android:background="@color/back_gray">

		<TextView
			style="@style/TextShadow"
			android:id="@+id/nameEnText"
			android:layout_toLeftOf="@+id/episodeText"
			android:layout_alignParentLeft="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/blue"
			android:singleLine="true" />

		<TextView
			style="@style/TextShadow"
			android:id="@+id/nameRuText"
			android:layout_below="@+id/nameEnText"
			android:layout_toLeftOf="@+id/episodeText"
			android:layout_alignParentLeft="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:singleLine="true" />

		<TextView
			android:id="@+id/episodeText"
			android:layout_alignParentRight="true"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_marginLeft="@dimen/offset_small"
			android:gravity="center_vertical"
			android:singleLine="true"
			android:textColor="@color/gray"
			android:textSize="@dimen/text_size_huge" />

	</RelativeLayout>


</LinearLayout>
