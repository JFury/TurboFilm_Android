<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<tv.turbik.ui.AspectRatioImageView
		app:aspectRatio="0.34183673469388"
		android:id="@+id/poster"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:scaleType="centerCrop" />

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom"
		android:paddingTop="@dimen/offset_small"
		android:paddingBottom="@dimen/offset_small"
		android:paddingLeft="@dimen/offset_normal"
		android:paddingRight="@dimen/offset_normal"
		android:background="@color/back_transparent">

		<TextView
			style="@style/TextShadow"
			android:id="@+id/nameEnText"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="@color/blue" />

		<TextView
			style="@style/TextShadow"
			android:id="@+id/nameRuText"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />

		<tv.turbik.ui.SeasonSelector
			android:id="@+id/seasonSelector"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />

	</LinearLayout>

</FrameLayout>
