<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="horizontal"
	android:weightSum="2">

	<TextView
		android:id="@+id/season_episode_number"
		style="@style/Header_Name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/offset_text_big"
		android:textColor="@color/minor_text" />

	<TextView
		android:id="@+id/name_en"
		style="@style/Header_Name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/offset_text_big"
		android:textColor="@color/name_en_text" />

	<TextView
		style="@style/Header_Name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/offset_text_normal"
		android:text="/" />

	<TextView
		android:id="@+id/name_ru"
		style="@style/Header_Name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/offset_text_normal" />

</LinearLayout>