<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="@dimen/offset_small"
	android:background="@color/back_gray">

	<tv.turbik.ui.AspectRatioImageView
		app:aspectRatio="0.34183673469388"
		android:id="@+id/logo"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:scaleType="centerInside" />

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom"
		android:padding="@dimen/offset_small">

		<TextView
			style="@style/GridItem_Name"
			android:id="@+id/name_en_text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="@color/name_en_text" />

		<TextView
			style="@style/GridItem_Name"
			android:id="@+id/name_ru_text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />

	</LinearLayout>

</LinearLayout>
