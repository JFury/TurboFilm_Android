<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="@dimen/offset_small"
	app:cardCornerRadius="0dp">

	<LinearLayout
		android:id="@+id/container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/back_gray"
		android:orientation="vertical">

		<tv.turbik.ui.AspectRatioImageView
			android:id="@+id/logo"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:scaleType="centerCrop"
			app:aspectRatio="0.34183673469388" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="bottom"
			android:orientation="vertical"
			android:padding="@dimen/offset_small">

			<TextView
				android:id="@+id/name_en_text"
				style="@style/GridItem_Name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textColor="@color/name_en_text" />

			<TextView
				android:id="@+id/name_ru_text"
				style="@style/GridItem_Name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" />

		</LinearLayout>

	</LinearLayout>

</android.support.v7.widget.CardView>

